<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <br>
    <br>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class:"navbar-brand" %>
          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
             <% if user_signed_in? %>
             <li>
               <%= link_to user_path(current_user.id), class:"nav-link text-light" do %>
                <i class="fas fa-home"></i>
                <p>Home</p>
               <% end %>
             </li>
             <li>
               <%= link_to users_path, class:"nav-link text-light" do %>
               <i class="fas fa-users"></i>
               <p>Users</p>
               <% end %>
             </li>
             <li>
               <%= link_to books_path, class:"nav-link text-light" do %>
               <i class="fas fa-book-open"></i>
               <p>Books</p>
               <% end %>
             </li>
             <li>
               <%= link_to destroy_user_session_path, class:"nav-link text-light", method: :delete do %>
               <i class="fas fa-sign-out-alt"></i>
               <p>Log out</p>
               <% end %>
             </li>
             <% else %>
             <li>
               <%= link_to root_path, class:"nav-link text-light" do %>
               <i class="fas fa-home"></i>
               <p>Home</p>
               <% end %>
             </li>
             <li>
               <%= link_to about_path, class:"nav-link text-light" do %>
               <i class="fas fa-link"></i>
               <p>About</p>
               <% end %>
             </li>
             <li>
               <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
               <i class="fas fa-user-plus"></i>
               <p>Sign up</p>
               <% end %>
             </li>
             <li>
               <%= link_to new_user_session_path, class:"nav-link text-light" do %>
               <i class="fas fa-sign-in-alt"></i>
               <p>Log in</p>
               <% end %>
             </li>
             <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}")%>
      <% end %>
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop</p>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>
