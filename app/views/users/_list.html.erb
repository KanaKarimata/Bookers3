<div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100, 100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name<th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
 
     <div class="row">
       <%= link_to "edit", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block rounded-lg" %>
     </div>

     <div>
      <h2 class="mt-3">New book</h2><br>
      <%= form_with model: book, local:true do |f| %>
       <div class="form-group">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title %><br>
       </div>
       <div class="form-group">
        <label for="book-opinion">Opinion</label><br>
        <%= f.text_area :body %><br>
       </div>
       <div class="form_group">
       <%= f.submit 'Create Book', class:'btn btn-success' %><br>
       </div>
      <% end %>
     </div>
    </div>